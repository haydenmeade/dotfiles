[push]
  default = current
[color]
  ui = auto
[alias]
  ap = add --patch
  co = checkout
  cob = !git checkout $(git branch | fzf)
  m = !git merge $(git branch | fzf)
[core]
  excludesFile = ~/.gitignore
  autocrlf = input
  pager = delta
[fetch]
  prune = true
[pull]
  rebase = false
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true    # use n and N to move between diff sections
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[includeIf "gitdir/i:~/anz/"]
    path = anz.gitconfig
[includeIf "gitdir/i:~/repos/"]
    path = me.gitconfig
[includeIf "gitdir/i:~/dotfiles/"]
    path = me.gitconfig
[safe]
	directory = *
