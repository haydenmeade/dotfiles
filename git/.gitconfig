[push]
  default = current
[color]
  ui = auto
[alias]
  ap = add --patch
  co = checkout
[core]
  excludesFile = ~/.gitignore
  autocrlf = input
  pager = delta
[commit]
  template = ~/.gitmessage
	gpgsign = true
[fetch]
  prune = true
[pull]
  rebase = false
[gpg]
	program = gpg
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = true      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[url "git@github.com:"]
	insteadOf = https://github.com
